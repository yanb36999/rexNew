<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zmcsoft.rex.commons.district.impl.dao.RoadSegDao">
    <resultMap id="RoadSegResultMap" type="com.zmcsoft.rex.commons.district.api.entity.RoadSeg">
              <id property="id" column="u_id" javaType="string" jdbcType="VARCHAR"/>
            <result property="roadId" column="road_id" javaType="String" jdbcType="VARCHAR"/>
            <result property="roadCode" column="road_code" javaType="String" jdbcType="VARCHAR"/>
            <result property="name" column="name" javaType="String" jdbcType="VARCHAR"/>
            <result property="code" column="code" javaType="String" jdbcType="VARCHAR"/>
            <result property="type" column="type" javaType="String" jdbcType="VARCHAR"/>
            <result property="police" column="police" javaType="String" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
            <result property="fullName" column="full_name" javaType="String" jdbcType="VARCHAR"/>
            <result property="districtId" column="district_id" javaType="String" jdbcType="VARCHAR"/>
            <result property="districtCode" column="district_code" javaType="String" jdbcType="VARCHAR"/>
    </resultMap>

    <!--用于动态生成sql所需的配置-->
    <sql id="config">
        <bind name="resultMapId" value="'RoadSegResultMap'"/>
        <bind name="tableName" value="'s_road_seg'"/>
    </sql>
  
    <insert id="insert" parameterType="com.zmcsoft.rex.commons.district.api.entity.RoadSeg" >
        <include refid="config"/>
        <include refid="BasicMapper.buildInsertSql"/>
    </insert>

    <delete id="deleteByPk" parameterType="String">
        delete from s_road_seg where u_id =#{id}
    </delete>

    <delete id="delete" parameterType="org.hswebframework.web.commons.entity.Entity">
        <include refid="config"/>
        <include refid="BasicMapper.buildDeleteSql"/>
    </delete>

    <update id="update" parameterType="org.hswebframework.web.commons.entity.Entity">
        <include refid="config"/>
        <include refid="BasicMapper.buildUpdateSql"/>
    </update>

    <select id="query" parameterType="org.hswebframework.web.commons.entity.Entity" resultMap="RoadSegResultMap">
        <include refid="config"/>
        <include refid="BasicMapper.buildSelectSql"/>
    </select>

    <select id="count" parameterType="org.hswebframework.web.commons.entity.Entity" resultType="int">
        <include refid="config"/>
        <include refid="BasicMapper.buildTotalSql"/>
    </select>
</mapper>
